{
    "compilerOptions": {
        "target": "es2022",
        "module": "nodenext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "rootDir": "./src",
        "noEmit": true,
        "erasableSyntaxOnly": true,
        "verbatimModuleSyntax": true,
        "rewriteRelativeImportExtensions": true,
    },
    "include": [
        "./src/*"
    ]
}
